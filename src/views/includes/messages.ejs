<% if (errors.length > 0) {%><div class="row">
    <div class="col">
      <div class="alert alert-danger mx-auto text-center">
        <% errors.forEach(erro => { %>
        <%= erro %> <br> 
       <% }) %>
      </div>
    </div>
  </div>

  <% } %> 

<% if (success.length > 0) {%><div class="row">
    <div class="col">
      <div class="alert alert-success mx-auto text-center">
        <% success.forEach(success => { %>
        <%= success %> <br> 
       <% }) %>
      </div>
    </div>
  </div>

  <% } %> 